<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Go-JEK Web App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Orders", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Gopay Topup", topup_gopay_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Sign up <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "User", user_signup_path %></li>
            <li><%= link_to "Driver", driver_signup_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Log in <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "User", '#' %></li>
            <li><%= link_to "Driver", '#' %></li>
          </ul>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
