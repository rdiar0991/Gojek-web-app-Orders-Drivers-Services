<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        Email: <%= @user.email %>
      </p>
      <p>
        Phone: <%= @user.phone %>
      </p>
      <p>
        Gopay balance: <%= @user.gopay_balance %>
      </p>
    </section>
  </aside>
</div>
